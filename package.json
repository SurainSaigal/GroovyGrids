{
    "name": "epic-app",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "flask-dev": "FLASK_DEBUG=1 pip3 install -r requirements.txt && python3 -m flask --app api/index run -p 5328 --reload",
        "next-dev": "next dev",
        "next-home": "dotenv -e .env.home -- next dev",
        "dev": "concurrently \"npm run next-dev\" \"npm run flask-dev\"",
        "home": "concurrently \"npm run next-home\" \"npm run flask-dev\""
    },
    "dependencies": {
        "concurrently": "^8.2.2",
        "ldrs": "^1.0.1",
        "next": "14.0.4",
        "react": "^18",
        "react-dom": "^18",
        "react-icons": "^5.0.1",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "autoprefixer": "^10.0.1",
        "dotenv-cli": "^7.3.0",
        "eslint": "^8",
        "eslint-config-next": "14.0.4",
        "postcss": "^8",
        "tailwindcss": "^3.3.0",
        "typescript": "^5"
    }
}
